{
  "name": "@crosslab-ide/crosslab-filesystem-extension",
  "publisher": "crosslab",
  "displayName": "crosslab-filesystem-extension",
  "description": "An extension adding a filesystem for use in crosslab.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.93.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onFileSystem:crosslabfs"
  ],
  "browser": "./dist/web/extension.js",
  "enabledApiProposals": [
    "fileSearchProvider",
    "textSearchProvider"
  ],
  "contributes": {
    "commands": [
      {
        "command": "projects.view.createProject",
        "title": "Create Project",
        "icon": "$(new-folder)"
      },
      {
        "command": "projects.view.openProject",
        "title": "Open Project",
        "icon": "$(folder-opened)"
      },
      {
        "command": "projects.view.renameProject",
        "title": "Rename Project",
        "icon": "$(pencil)"
      },
      {
        "command": "projects.view.deleteProject",
        "title": "Delete Project",
        "icon": "$(trash)"
      },
      {
        "command": "filesExplorer.copy",
        "title": "Delete Project",
        "icon": "$(trash)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "projects.view.createProject",
          "when": "view == projects.view",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "projects.view.openProject",
          "when": "view == projects.view && viewItem == project",
          "group": "inline@1"
        },
        {
          "command": "projects.view.renameProject",
          "when": "view == projects.view && viewItem == project",
          "group": "inline@2"
        },
        {
          "command": "projects.view.deleteProject",
          "when": "view == projects.view && viewItem == project",
          "group": "inline@3"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "projects",
          "title": "Projects",
          "icon": "$(file-directory)"
        }
      ]
    },
    "views": {
      "projects": [
        {
          "type": "tree",
          "id": "projects.view",
          "name": "Projects"
        }
      ]
    }
  },
  "scripts": {
    "test": "vscode-test-web --browserType=chromium --extensionDevelopmentPath=. --extensionTestsPath=dist/web/test/suite/extensionTests.js",
    "pretest": "npm run compile-web",
    "vscode:prepublish": "npm run package-web",
    "compile-web": "npm run check-types && npm run lint && node esbuild.js",
    "watch-web": "npm-run-all -p watch-web:*",
    "watch-web:esbuild": "node esbuild.js --watch",
    "watch-web:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package-web": "rm -rf dist && npm run check-types && npm run lint && node esbuild.js",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "run-in-browser": "vscode-test-web --browserType=chromium --extensionDevelopmentPath=. --folder-uri=crosslabfs:/workspace"
  },
  "devDependencies": {
    "@esbuild-plugins/node-globals-polyfill": "^0.2.3",
    "@types/assert": "^1.5.10",
    "@types/diff": "^5.2.2",
    "@types/mocha": "^10.0.7",
    "@types/node": "^22.6.1",
    "@types/vscode": "^1.93.0",
    "@typescript-eslint/eslint-plugin": "^8.3.0",
    "@typescript-eslint/parser": "^8.3.0",
    "@vscode/test-web": "^0.0.58",
    "assert": "^2.1.0",
    "esbuild": "^0.23.1",
    "eslint": "^9.9.1",
    "glob": "^11.0.0",
    "mocha": "^10.7.3",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.5.4"
  },
  "dependencies": {
    "@crosslab-ide/abstract-messaging-channel": "file:../../shared/abstract-messaging-channel",
    "@crosslab-ide/crosslab-filesystem-service": "file:../service",
    "@crosslab-ide/editor-settings": "file:../../shared/editor-settings",
    "@crosslab-ide/filesystem-messaging-protocol": "file:../libraries/filesystem-messaging-protocol",
    "@crosslab-ide/soa-client": "file:../../shared/soa-client-js",
    "@types/uuid": "^10.0.0",
    "diff": "^7.0.0",
    "esbuild-plugin-polyfill-node": "^0.3.0",
    "fuse.js": "^7.0.0",
    "uuid": "^10.0.0",
    "vscode-uri": "^3.0.8"
  }
}
