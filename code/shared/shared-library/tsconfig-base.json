{
    "compilerOptions": {
        "target": "ESNext",
        "moduleResolution": "Node",
        "rootDir": "src",
        "outDir": "lib",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "declaration": true,
        "declarationDir": "lib/types"
    }
}
