{
    "type": "commonjs",
    "name": "crosslab-compiler",
    "displayName": "crosslab-compiler",
    "description": "This extension allows the integration of a compiler via the corresponding CrossLab service.",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.91.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [],
    "browser": "./dist/web/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "crosslab-compiler.helloWorld",
                "title": "Hello World"
            },
            {
                "command": "crosslab-compiler.compile",
                "title": "Compile",
                "icon": "$(run)",
                "shortTitle": "compile",
                "enablement": "workbenchState == folder"
            }
        ],
        "menus": {
            "editor/title/run": [
                {
                    "command": "crosslab-compiler.compile"
                }
            ]
        }
    },
    "scripts": {
        "test": "vscode-test-web --browserType=chromium --extensionDevelopmentPath=. --extensionTestsPath=dist/web/test/suite/index.js",
        "pretest": "npm run compile-web",
        "vscode:prepublish": "npm run package-web",
        "compile-web": "webpack",
        "watch-web": "webpack --watch",
        "package-web": "webpack --mode production --devtool hidden-source-map",
        "lint": "eslint src --ext ts",
        "run-in-browser": "vscode-test-web --browserType=chromium --extensionDevelopmentPath=. ."
    },
    "devDependencies": {
        "@types/assert": "^1.5.10",
        "@types/mocha": "^10.0.7",
        "@types/vscode": "^1.91.0",
        "@types/webpack-env": "^1.18.5",
        "@typescript-eslint/eslint-plugin": "^7.14.1",
        "@typescript-eslint/parser": "^7.11.0",
        "@vscode/test-web": "^0.0.55",
        "assert": "^2.1.0",
        "eslint": "^8.57.0",
        "mocha": "^10.5.2",
        "process": "^0.11.10",
        "ts-loader": "^9.5.1",
        "typescript": "^5.4.5",
        "webpack": "^5.92.1",
        "webpack-cli": "^5.1.4"
    },
    "dependencies": {
        "messaging-channels": "file:../../servers/messaging-channels",
        "shared-library": "file:../../servers/shared-library"
    }
}
