{
  "name": "indexeddb-fsprovider",
  "private": true,
  "displayName": "indexeddb-fsprovider",
  "description": "A FileSystemProvider for IndexedDB.",
  "version": "0.0.1",
  "publisher": "goldi",
  "keywords": [
    "goldi",
    "crosslab"
  ],
  "license": "MIT",
  "author": {
    "email": "pierre.helbing@tu-ilmenau.de",
    "name": "Pierre Helbing"
  },
  "readme": "./README.md",
  "engines": {
    "vscode": "^1.89.0"
  },
  "categories": [
    "Other"
  ],
  "extensionKind": [
    "ui",
    "workspace"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onFileSystem:idbfs"
  ],
  "enabledApiProposals": [
    "fileSearchProvider",
    "textSearchProvider"
  ],
  "browser": "./dist/web/extension.js",
  "main": "./dist/web/extension.js",
  "contributes": {
    "viewsWelcome": [
      {
        "view": "explorer",
        "contents": "You can also open a folder saved in GOLDi.\n[Open Folder (GOLDi)](command:idbfs.workspaceInit)",
        "when": "workbenchState == empty || workspaceFolderCount == 0"
      }
    ],
    "commands": [
      {
        "command": "idbfs.workspaceInit",
        "title": "Setup Workspace",
        "category": "IndexedDB-Filesystem"
      },
      {
        "command": "idbfs.init",
        "title": "Create Files",
        "category": "IndexedDB-Filesystem"
      },
      {
        "command": "idbfs.reset",
        "title": "Delete Files",
        "category": "IndexedDB-Filesystem"
      },
      {
        "command": "idbfs.deleteFile",
        "title": "Delete \"file.txt\"",
        "category": "IndexedDB-Filesystem"
      },
      {
        "command": "idbfs.addFile",
        "title": "Add \"file.txt\"",
        "category": "IndexedDB-Filesystem"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "idbfs.init",
          "when": "workbenchState == workspace || workbenchState == folder"
        },
        {
          "command": "idbfs.reset",
          "when": "workbenchState == workspace || workbenchState == folder"
        },
        {
          "command": "idbfs.deleteFile",
          "when": "workbenchState == workspace || workbenchState == folder"
        },
        {
          "command": "idbfs.addFile",
          "when": "workbenchState == workspace || workbenchState == folder"
        },
        {
          "command": "idbfs.workspaceInit",
          "when": "workbenchState != folder && workbenchState != workspace"
        }
      ]
    }
  },
  "scripts": {
    "test": "vscode-test-web --browserType=chromium --extensionDevelopmentPath=. --extensionTestsPath=dist/web/test/suite/index.js",
    "pretest": "npm run compile-web",
    "vscode:prepublish": "npm run package-web",
    "compile-web": "webpack",
    "watch-web": "webpack --watch",
    "package-web": "webpack --mode production --devtool hidden-source-map",
    "lint": "eslint src --ext ts",
    "run-in-browser": "vscode-test-web --browserType=chromium --extensionDevelopmentPath=."
  },
  "devDependencies": {
    "@types/assert": "^1.5.10",
    "@types/mocha": "^10.0.6",
    "@types/vscode": "^1.89.0",
    "@types/webpack-env": "^1.18.4",
    "@typescript-eslint/eslint-plugin": "^7.7.1",
    "@typescript-eslint/parser": "^7.7.1",
    "@vscode/test-web": "^0.0.54",
    "assert": "^2.1.0",
    "eslint": "^8.57.0",
    "mocha": "^10.4.0",
    "process": "^0.11.10",
    "ts-loader": "^9.5.1",
    "typescript": "^5.4.5",
    "webpack": "^5.91.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "@types/diff": "^5.2.1",
    "@idbfs/core": "^0.9.5",
    "@idbfs/dom": "0.2.4",
    "async-mutex": "^0.5.0",
    "browserfs": "^1.4.3",
    "diff": "^5.2.0",
    "fuse.js": "^7.0.0",
    "path-browserify": "^1.0.1",
    "y-websocket": "^2.0.3",
    "yjs": "^13.6.15"
  }
}
